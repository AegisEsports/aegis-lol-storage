# Dockerfile.dev
# Development image: mounts source, installs all deps, and runs with a TS executor

FROM node:22-alpine

WORKDIR /app

# Install deps first for build cache
COPY package*.json ./
RUN npm i

ENV NODE_ENV=development \
    CHOKIDAR_USEPOLLING=1 \
    WATCHHPACK_POLLING=true

# Expose dev port
EXPOSE 3000
CMD ["npm", "run", "dev"]
